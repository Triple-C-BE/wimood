# ============================================================
# Wimood-to-Shopify Sync Service â€” Environment Variables
# ============================================================
# Copy this file to .env and fill in your values.

# --- Wimood API (Required) ---
WIMOOD_API_KEY=your_api_key_here
WIMOOD_API_URL=https://api.wimoodshop.nl
WIMOOD_BASE_URL=https://wimoodshop.nl
WIMOOD_CUSTOMER_ID=your_customer_id_here

# --- Shopify Admin API (Required) ---
SHOPIFY_STORE_URL=https://your-store.myshopify.com
SHOPIFY_ACCESS_TOKEN=shpat_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# --- Sync Configuration (Optional) ---
SHOPIFY_VENDOR_TAG=Atendo
SYNC_INTERVAL_SECONDS=3600

# --- Scraping (Optional) ---
SCRAPE_DELAY_SECONDS=2
MAX_SCRAPE_RETRIES=5

# --- Logging (Optional) ---
LOG_LEVEL=INFO

# --- Monitoring (Optional) ---
ENABLE_MONITORING=false
MONITOR_PORT=8080

# --- Order Sync / Dropshipping (Optional) ---
ENABLE_ORDER_SYNC=false
ORDER_SYNC_INTERVAL_SECONDS=300
WIMOOD_ORDER_API_URL=https://api.wimood.nl/v1
WIMOOD_ORDER_SHIPMENT=postnl
WIMOOD_ORDER_PAYMENT=invoice
WIMOOD_ORDER_REMARK=test

# --- Test Mode (Optional) ---
TEST_MODE=false
TEST_PRODUCT_LIMIT=5
